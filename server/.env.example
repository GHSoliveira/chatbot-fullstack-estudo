# Ambiente de Desenvolvimento
NODE_ENV=development

# Configurações do Servidor
PORT=3001
HOST=localhost

# Banco de Dados
DB_FILE=./db.json

# Segurança e Autenticação
# JWT_SECRET deve ser uma string longa e aleatória em produção
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Credenciais padrão do admin (altere em produção!)
ADMIN_DEFAULT_USERNAME=admin
ADMIN_DEFAULT_PASSWORD=123
ADMIN_DEFAULT_NAME=Admin Full

# Timeout da sessão em milissegundos (15000 = 15 segundos)
SESSION_TIMEOUT=15000

# Configurações CORS
# Em produção, defina a origem específica do frontend
CORS_ORIGIN=http://localhost:5173

# Logs
# Níveis: debug, info, warn, error
LOG_LEVEL=info

# Rate Limiting (proteção contra brute force)
# Número máximo de requisições por IP em 15 minutos
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000